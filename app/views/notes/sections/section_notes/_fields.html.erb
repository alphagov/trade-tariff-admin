<div class='row'>
  <div class='span6'>
    <%= f.input :content, as: :text, input_html: { class: 'span6', rows: 12 } %>
  </div>
  <div class='span6'>
    <%= f.label :preview, required: false %>
    <div class='well' data-preview='govspeak' data-preview-for='#section_note_content'>
      <%= @section_note.preview %>
    </div>
  </div>
</div>

<div class='row'>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
</div>
